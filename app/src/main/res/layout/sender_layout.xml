<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilerggg"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/photocamera"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_10sdp" />

    <!-- Tin nhắn văn bản -->
    <TextView
        android:id="@+id/msgsendertyp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_toLeftOf="@id/profilerggg"
        android:background="@drawable/sender_shape"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/_7sdp"
        android:text="aysuhvish"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Hình ảnh gửi kèm -->
    <ImageView
        android:id="@+id/senderImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/msgsendertyp"
        android:layout_alignStart="@id/msgsendertyp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_50sdp"
        />

</RelativeLayout>
